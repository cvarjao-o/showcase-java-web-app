<?xml version="1.0" encoding="UTF-8"?>
<Configuration debug="true" trace="true">
	<Properties>
		<Property name="log4j.app.default.level" value="error" />
		<Property name="log4j.app.level" value="debug" />
		<Property name="log4j.app.layout" value="%d [%t] [%-5p] %c{1.}.%M(%F:%L) - %m%n" />
	</Properties>
	<Appenders>
		<Console name="STDOUT">
	      <PatternLayout>
	        <Pattern>${log4j.app.layout}</Pattern>
	      </PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="${log4j.app.defaul.level}">
			<AppenderRef ref="STDOUT" />
		</Root>
		<Logger name="ca.bc.gov" level="${log4j.app.level}"
			additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
	</Loggers>
</Configuration>